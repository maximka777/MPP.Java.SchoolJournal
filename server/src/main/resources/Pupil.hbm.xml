<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="school.journal.entity.Pupil" table="pupil" schema="school_journal_db">
        <id name="pupilId" column="pupil_id"/>
        <property name="classId" column="class_id"/>
        <property name="firstName" column="first_name"/>
        <property name="pathronymic" column="pathronymic"/>
        <property name="lastName" column="last_name"/>
        <property name="phoneNumber" column="phone_number"/>
        <property name="characteristic" column="characteristic"/>
    </class>
</hibernate-mapping>